<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
<script>
    // Fetch projects from API
    document.addEventListener('DOMContentLoaded', function () {
        fetch('/api/project')
            .then(response => response.json())
            .then(data => {
                const projectsContainer = document.getElementById('projects-container');
                projectsContainer.className = 'card-deck';
                projectsContainer.innerHTML = '';

                data.forEach(project => {
                    if(project.isFeatured == true) {
                        const projectCard = document.createElement('div');
                        projectCard.className = 'card border-secondary';
                        projectCard.innerHTML = `
                                <div class="card-header"><h4 class="card-title">${project.title}</h4></div> 
                                <img class="card-img-top" src=${project.imageUrl}>
                                <div class="card-body">
                                    <p class="card-text">${project.description}</p>
                                </div>
                                <div class="card-footer">
                                    <small><p>Completed: ${project.completedDate}</p>
                                    <p>Technologies: ${project.technologiesUsed}</p></small>
                                    <a href="${project.gitHubUrl}" class="btn btn-sm btn-outline-secondary" target="_blank">GitHub</a>
                                    <a href="${project.liveDemoUrl}" class=" btn btn-sm btn-outline-secondary" target="_blank">Live Demo</a>
                                </div>
                            `;
                        projectsContainer.appendChild(projectCard);
                    }
                });

            })
            .catch(error => {
                console.error('Error fetching projects:', error);
                document.getElementById('projects-container').innerHTML = '<div class="col-12 text-center">Error loading projects</div>';
            });
    });

    particlesJS('particles-js', {
        particles: {
            number: {
                value: 80,
                density: {
                    enable: true,
                    value_area: 800
                }
            },
            color: {
                value: '#BBBE64'
            },
            shape: {
                type: 'circle',
                stroke: {
                    width: 0,
                    color: '#000000'
                },
                polygon: {
                    nb_sides: 5
                },
                image: {
                    src: 'img/github.svg',
                    width: 100,
                    height: 100
                }
            },
            opacity: {
                value: 0.5,
                random: false,
                anim: {
                    enable: false,
                    speed: 1,
                    opacity_min: 0.1,
                    sync: false
                }
            },
            size: {
                value: 3,
                random: true,
                anim: {
                    enable: false,
                    speed: 40,
                    size_min: 0.1,
                    sync: false
                }
            },
            line_linked: {
                enable: true,
                distance: 150,
                color: '#BBBE64',
                opacity: 0.4,
                width: 1
            },
            move: {
                enable: true,
                speed: 6,
                direction: 'none',
                random: false,
                straight: false,
                out_mode: 'out',
                attract: {
                    enable: false,
                    rotateX: 600,
                    rotateY: 1200
                }
            }
        },
        retina_detect: true
    });
</script>
</body>
